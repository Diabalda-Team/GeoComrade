<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView android:id="@+id/add_desire_headline_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="10dip"
        android:text="@string/add_desire"
        style="@style/text_headline"
        />
   <Button android:id="@+id/create_desire_add_button"
       	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="10dip"
        android:layout_margin="10dip"
        android:text="Add Desire"
        android:textStyle="bold"
       />
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/add_desire_headline_textview"
        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:orientation="vertical"
            >
            
            <RelativeLayout                 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                style="@style/simple_text"
	                android:text="Name"
	                />
	            
	            <EditText android:id="@+id/create_desire_name_edittext"
	                android:layout_width="200dp"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                />
            
            </RelativeLayout>
             
            <RelativeLayout                 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                style="@style/simple_text"
	                android:text="Active"
	                />
	            <CheckBox android:id="@+id/create_desire_active_checkbox"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:checked="true"
	                />
            </RelativeLayout>
            
            <RelativeLayout                 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                style="@style/simple_text"
	                android:text="Action"
	                />
	            <Spinner 
	                android:layout_width="200dp"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                />
            </RelativeLayout>
            
        </LinearLayout>
       
    </ScrollView>
    

</RelativeLayout>